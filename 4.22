#include<stdio.h>
#include<stdlib.h>
#include<pthread.h>


int arr[50], i;
int n;

float average;
int minimum;
int maximum;

void *th()
{
        int sum=0;
        for(i=0;i<n;i++)
                sum=sum+arr[i];
        average=sum/n;
        
}

void *th1()
{


        minimum=arr[0];
        for(int i=0;i<n;i++)
          if(minimum>arr[i])
            minimum=arr[i];
        

}

void *th2()
{

        maximum=arr[0];
        for(int i=0;i<n;i++)
                if(maximum<arr[i])
                        maximum=arr[i];
                        
}
int main()
{
    int count =0;
    printf("enter the number of elements you want to enter");
    scanf("%d",&n);
    for(i=0; i<n; i++)
    {
        printf("enter the number: ");
        scanf("%d",&arr[i]);
    }
    int t,i;
   
    pthread_t t1;
    pthread_t t2;
    pthread_t t3;
    
        t=pthread_create(&t1,NULL,&th,NULL);
        pthread_join(t1,NULL);
    
        t=pthread_create(&t2,NULL,&th1,NULL);
        pthread_join(t2,NULL);

        t=pthread_create(&t3,NULL,&th2,NULL);
        pthread_join(t3,NULL);
 
    printf("The average value is %f",average);
