#include<stdio.h>
#include<stdlib.h>
#include<pthread.h>


int arr[50];
int i;
int n;
float avg;
int min;
int max;

void *th()
{
        float b=0;
        for(i=0;i<n;i++)
                b=b+arr[i];
        avg=b/n;
        
}

void *th1()
{


        min=arr[0];
        for(int i=0;i<n;i++)
                if(min>arr[i])
                        min=arr[i];
        

}

void *th2()
{

        max=arr[0];
        for(int i=0;i<n;i++)
                if(max<arr[i])
                        max=arr[i];
                        
}
int main()
{
    int count =0;
    printf("enter the number of elements you want to enter: ");
    scanf("%d",&n);
    for(i=0; i<n; i++)
    {
        printf("enter the number: ");
        scanf("%d",&arr[i]);
    }
    int t;
   
    pthread_t t1;
    pthread_t t2;
    pthread_t t3;
    
        t=pthread_create(&t1,NULL,&th,NULL);
        pthread_join(t1,NULL);
    
        t=pthread_create(&t2,NULL,&th1,NULL);
        pthread_join(t2,NULL);

        t=pthread_create(&t3,NULL,&th2,NULL);
        pthread_join(t3,NULL);
 
    printf("Average value is %f \n",avg);
    printf("Minimum  value is %d",min);
    printf("Maximum  value is %d",max);

}
